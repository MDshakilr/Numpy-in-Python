#shape

import numpy as np
x=np.array([[1,2],[3,4]])
print(x)

print(x.shape)

import numpy as np
x=np.array([[1,2,7,],[3,43,7]])
print(x)

print(x.shape)



import numpy as np
x = np.array([1,2,7], ndmin=4)
print(x)
print(x.ndim)
print(x.shape)



#resphape

import numpy as np
x=np.array([1,2,4,5,6,7])
y=x.reshape(3,2)
print(y)


#resize

import numpy as np
x=np.array([[1,2,4],[2,3,4]])
y=np.resize(x,(4,3))
print(y)

import numpy as np
x=np.array([[1,2,4],[2,3,4]])
x.resize(4,3)
print(x)





